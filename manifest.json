{
  "manifest_version": 2,

  "name": "LinkShare",
  "version": "0.0.1",
  "description": "ShareLinks online with groups.",

  "permissions": [
    "clipboardRead",
    "*://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
   "background":{
        "scripts":[
            "resources/jquery.min.js"
            ],
        "persistent": true
    },
   "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["toolbar.js"],
        "run_at": "document_end"
      }
    ]
}
