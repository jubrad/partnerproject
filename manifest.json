{
  "manifest_version": 2,

  "name": "LinkShare",
  "version": "0.0.1",
  "description": "ShareLinks online with groups.",

  "permissions": [
    "clipboardRead",
    "*://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
   "background":{
        "scripts":[
            "resources/jquery.min.js",
            "scripts/background.js"
            ],
        "persistent": true
    },
   "content_scripts": [
      {
        "all_frames": true,        
        "matches": ["https://*/*", "http://*/*"],
        "js": ["resources/jquery.min.js"]
      }
    ]
}
